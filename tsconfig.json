{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2015",
      "moduleResolution": "node",
      "strictNullChecks": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmitOnError": true,
      "outDir": "build",
      "lib": [
        "esnext",
        "es7",
        "es2016.array.include",
        "dom"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  
